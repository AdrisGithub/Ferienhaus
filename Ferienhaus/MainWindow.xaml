<Window x:Class="Ferienhaus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Bookings" Height="200" Width="320" ResizeMode="NoResize">
    <Canvas Background="Gray">
        <Label Canvas.Left="60" Content="Start:"></Label>
        <Label Canvas.Right="82" Content="End:"></Label>
        <DatePicker x:Name="start" Canvas.Left="20" Canvas.Top="20"></DatePicker>
        <DatePicker x:Name="end" Canvas.Right="20" Canvas.Top="20"></DatePicker>
        <Button Canvas.Right="130" Canvas.Top="100" Content=" Add Date " Click="Button_OnClick"></Button>
        <Label x:Name="message" Content= "Please select two dates and click on the button to book it" Canvas.Top="120"></Label>
    </Canvas>
</Window>
